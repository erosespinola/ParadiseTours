extends layout

block content

  section#section
    .section
      .services-details
        .container
          .row
            .col-xs-12
              .heading
                span(id="gallery") #{lang.gallery.our}
                h2 #{lang.layout.gallery}

          .row
            .col-xs-12
              #lightgallery
                - var n = 0
                while n < 50
                  a(href='img/paradise/gallery/full/' + n + '.jpg')
                    img(src='img/paradise/gallery/thumb/' + n++ + '_tn.jpg', style="margin: 4px;", class="img-rounded")
                

      .query
        .container
          .row
            .col-xs-12.col-sm-10
              h5 #{lang.index.doubts}
              p #{lang.index.weCanHelp}
            .col-xs-12.col-sm-2
              a.contact-us.button(href='contact-us.html') #{lang.index.contactUs}