extends layout

block content

  section#section
    .section
      .services-details
        .container
          .row
            .col-xs-12
              .heading
                span #{lang.services.our}
                h3 #{lang.layout.services}
            .col-xs-12
              .logistics
                .banner.service-banner.spacetop
                  .banner-image-plane-services.parallax
                h4 #{lang.index.serviceOne.name} 
                p #{lang.services.serviceOne}

                h4 #{lang.index.serviceTwo.name} 
                p #{lang.services.serviceTwo}

                h4 #{lang.index.serviceThree.name} 
                p #{lang.services.serviceThree}

                .specialtys.clearfix
                  h5 #{lang.index.features} 
                  .col-xs-12.col-sm-6.custom-zero-padding
                    ul
                      li
                        span.icon-check
                        | 														#{lang.index.featureOne}
                      li
                        span.icon-check
                        | 														#{lang.index.featureTwo}
                  .col-xs-12.col-sm-6.custom-footer-padding
                    ul
                      li
                        span.icon-check
                        | 														#{lang.index.featureThree}
                      li
                        span.icon-check
                        | 														#{lang.index.featureFour}
      .more-services
        .container
          .row
            .col-xs-12.col-sm-3
              .heading
                span #{lang.services.more}
                h3 #{lang.layout.gallery}
              p #{lang.services.gallery}
            .col-xs-12.col-sm-9
              #more-slides.more-slides
                .more-tab.zoom
                  figure
                    a(href='/gallery')
                      img(src='img/paradise/sectur.png', alt='Sectur')
                  .more-text
                    h6
                      a(href='/gallery') #{lang.index.featureOne}
                .more-tab.zoom
                  figure
                    a(href='/gallery')
                      img(src='img/paradise/accesible.jpg', alt='Accesible')
                  .more-text
                    h6
                      a(href='/gallery') #{lang.index.featureTwo}
                .more-tab.zoom
                  figure
                    a(href='/gallery')
                      img(src='img/paradise/turistico2.jpg', alt='Turistico')
                  .more-text
                    h6
                      a(href='/gallery') #{lang.index.featureThree}

      .query
        .container
          .row
            .col-xs-12.col-sm-10
              h5 #{lang.index.doubts}
              p #{lang.index.weCanHelp}
            .col-xs-12.col-sm-2
              a.contact-us.button(href='contact-us.html') #{lang.index.contactUs}
